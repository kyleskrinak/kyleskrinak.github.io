---
import { getEntry, render } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import { SITE } from "@/config";

const page = await getEntry("pages", "lchf");
if (!page) throw new Error("LCHF page not found");

const { Content } = await render(page);
const { title, description } = page.data;
---

<Layout
  title={`${title} | ${SITE.title}`}
  description={description}
>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="app-layout pb-12">
    <h1 class="text-2xl font-semibold sm:text-3xl">{title}</h1>

    <section class="app-prose mt-8 max-w-app">
      <Content />
    </section>
  </main>
  <Footer />
</Layout>
