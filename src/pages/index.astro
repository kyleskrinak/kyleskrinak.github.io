---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE, createPath } from '../consts';
import { getCollection } from 'astro:content';

const allBlogPosts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 5);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				padding: 2em 0;
				text-align: center;
				margin-bottom: 3em;
			}
			.hero h1 {
				font-size: 2.5em;
				margin-bottom: 0.5em;
			}
			.hero p {
				font-size: 1.1em;
				color: rgb(var(--gray));
				max-width: 600px;
				margin: 1em auto;
			}
			.recent-posts {
				margin: 3em 0;
			}
			.recent-posts h2 {
				margin-bottom: 1.5em;
				padding-bottom: 0.5em;
				border-bottom: 2px solid rgb(var(--gray-light));
			}
			.post-item {
				margin-bottom: 2em;
				padding-bottom: 2em;
				border-bottom: 1px solid rgb(var(--gray-light));
			}
			.post-item:last-child {
				border-bottom: none;
			}
			.post-title {
				margin: 0.5em 0;
				font-size: 1.5em;
			}
			.post-title a {
				text-decoration: none;
				color: var(--accent);
			}
			.post-title a:hover {
				text-decoration: underline;
			}
			.post-date {
				color: rgb(var(--gray));
				font-size: 0.9em;
				margin-bottom: 0.5em;
			}
			.cta-link {
				display: inline-block;
				margin-top: 1em;
				padding: 0.5em 1em;
				background-color: var(--accent);
				color: white;
				text-decoration: none;
				border-radius: 4px;
				transition: background-color 0.2s;
			}
			.cta-link:hover {
				background-color: var(--accent-dark);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>{SITE_TITLE}</h1>
				<p>{SITE_DESCRIPTION}</p>
				<p>Based in Apex, NC | <a href={createPath('/blog')}>Read all posts</a></p>
			</section>

			<section class="recent-posts">
				<h2>Recent Posts</h2>
				{
					allBlogPosts.map((post) => (
						<article class="post-item">
							<div class="post-date">
								<FormattedDate date={post.data.pubDate} />
							</div>
							<h3 class="post-title">
								<a href={createPath(`/blog/${post.id}/`)}>{post.data.title}</a>
							</h3>
							{post.data.description && <p>{post.data.description}</p>}
						</article>
					))
				}
				<a href={createPath('/blog')} class="cta-link">View All Posts â†’</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
