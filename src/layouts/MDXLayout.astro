---
import BlogPost from './BlogPost.astro';
import FbMigrate from '../components/FbMigrate.astro';

interface Props {
	title: string;
	description?: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: string;
	slug?: string;
}

const { title, description, pubDate, updatedDate, heroImage, slug = '' } = Astro.props;
---

<BlogPost title={title} description={description} pubDate={pubDate} updatedDate={updatedDate} image={heroImage} alt={undefined} slug={slug}>
	<slot />
</BlogPost>
