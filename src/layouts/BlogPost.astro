---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import DisqusComments from '../components/DisqusComments.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import Header from '../components/Header.astro';
import SocialShare from '../components/SocialShare.astro';
import { getOptimizedImage } from '../lib/images';

type Props = CollectionEntry<'blog'>['data'] & {
	slug?: string;
};

const props = Astro.props as any;
const { title, description, pubDate, updatedDate, slug = '' } = props;
const image = props.image as string | undefined;
const alt = props.alt as string | undefined;

// Get optimized image metadata for Astro Image component
const optimizedImage = getOptimizedImage(image);
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 2em;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				max-width: 100%;
				height: auto;
			}
			@media (max-width: 768px) {
				.hero-image {
					margin-bottom: 1.5em;
				}
				.hero-image img {
					border-radius: 8px;
				}
			}
			@media (max-width: 480px) {
				.hero-image {
					margin-bottom: 1em;
				}
				.hero-image img {
					border-radius: 6px;
				}
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<GoogleAnalytics />
		<main id="main-content">
			<article>
				<div class="hero-image">
					{optimizedImage && (
						<Image
							src={optimizedImage}
							alt={alt || 'Blog post hero image'}
							width={1200}
							height={600}
							quality={85}
							format="webp"
							sizes="(max-width: 640px) 100vw, (max-width: 1024px) 90vw, 1200px"
							loading="eager"
							decoding="sync"
						/>
					)}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
					<SocialShare {title} {slug} {description} />
					<DisqusComments {slug} {title} />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
